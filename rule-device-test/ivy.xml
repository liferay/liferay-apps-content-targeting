<?xml version="1.0"?>

<ivy-module
	version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd"
>
	<info module="${plugin.name}" organisation="com.liferay.content-targeting">
		<extends extendType="configurations,description,info" location="${sdk.dir}/ivy.xml" module="com.liferay.sdk" organisation="com.liferay" revision="latest.integration" />
	</info>

	<dependencies defaultconf="test->default">
		<dependency name="arquillian-junit-container" org="org.jboss.arquillian.junit" rev="1.1.2.Final" force="true"  />
		<dependency name="arquillian-container-liferay" org="org.arquillian.liferay" rev="1.0.0.Alpha1" />
		<dependency name="arquillian-deployment-generator-bnd" org="org.arquillian.liferay" rev="1.0.0.Alpha1" />
		<dependency name="com.liferay.osgi.util" org="com.liferay" rev="1.0.1" />
		<dependency name="org.osgi.core" org="org.osgi" rev="5.0.0" />
		<dependency name="org.osgi.enterprise" org="org.osgi" rev="5.0.0" />
		<dependency name="spring-test" org="org.springframework" rev="2.5" />
	</dependencies>
</ivy-module>