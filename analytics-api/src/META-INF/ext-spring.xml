<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" default-destroy-method="destroy" default-init-method="afterPropertiesSet" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean class="com.liferay.content.targeting.analytics.internal.osgi.SpringOsgiBridge" />

	<!-- Listeners -->

	<bean id="messageListener.analytics_listener" class="com.liferay.content.targeting.analytics.messaging.AnalyticsMessageListener" />
	<bean id="messageListener.analytics_hot_deploy_listener" class="com.liferay.content.targeting.analytics.messaging.AnalyticsHotDeployMessageListener">
		<constructor-arg>
			<map>
				<entry key="analyticsMessageListener" value-ref="messageListener.analytics_listener" />
				<entry key="analyticsMessageDestination" value="liferay/analytics" />
			</map>
		</constructor-arg>
		<constructor-arg name="servletContextNames">
			<array>
				<value>analytics-processor</value>
			</array>
		</constructor-arg>
	</bean>

	<!-- Configurator -->

	<bean id="messagingConfigurator" class="com.liferay.content.targeting.analytics.messaging.config.AnalyticsPluginMessagingConfigurator">
		<property name="analyticsMessageDestination" value="liferay/analytics" />
		<property name="messageListeners">
			<map key-type="java.lang.String" value-type="java.util.List">
				<entry key="liferay/hot_deploy">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.analytics_hot_deploy_listener" />
					</list>
				</entry>
				<entry key="liferay/analytics">
					<list value-type="com.liferay.portal.kernel.messaging.MessageListener">
						<ref bean="messageListener.analytics_listener" />
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>