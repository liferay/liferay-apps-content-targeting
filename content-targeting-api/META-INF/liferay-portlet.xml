<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>ctcore</portlet-name>
		<indexer-class>com.liferay.content.targeting.util.CampaignIndexer</indexer-class>
		<indexer-class>com.liferay.content.targeting.util.UserSegmentIndexer</indexer-class>
		<scheduler-entry>
			<scheduler-event-listener-class>com.liferay.content.targeting.messaging.CheckAnonymousUserUserSegmentsMessageListener</scheduler-event-listener-class>
			<trigger>
				<simple>
					<property-key>anonymous.user.user.segments.check.interval</property-key>
					<time-unit>day</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<control-panel-entry-category>site_administration.configuration</control-panel-entry-category>
		<control-panel-entry-weight>100.0</control-panel-entry-weight>
		<control-panel-entry-class>com.liferay.content.targeting.portlet.ContentTargetingApiControlPanelEntry</control-panel-entry-class>
	</portlet>
</liferay-portlet-app>