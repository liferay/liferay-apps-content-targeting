<?xml version="1.0" encoding="UTF-8"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>

	<!-- Destinations -->

		<bean id="destination.analytics" class="com.liferay.portal.kernel.messaging.ParallelDestination">
				<constructor-arg name="name" value="liferay/analytics" />
				<constructor-arg name="workersCoreSize" value="25" />
				<constructor-arg name="workersMaxSize" value="50" />
		</bean>

	<!-- Configurator -->

	<bean id="messagingConfigurator" class="com.liferay.portal.kernel.messaging.config.PluginMessagingConfigurator">
		<property name="destinations">
			<list>
				<ref bean="destination.analytics" />
			</list>
		</property>
	</bean>
</beans>