<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="com.liferay.contenttargeting">
	<namespace>CT</namespace>
	<entity name="Rule" uuid="true" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="ruleId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="segmentId" type="long" />
		<column name="type" type="String" />
		<column name="typeSettings" type="String" />

		<!-- Order -->

		<order by="desc">
			<order-column name="type" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
	</entity>
	<entity name="UserSegment" uuid="true" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="segmentId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="name" type="String" localized="true" />
		<column name="description" type="String" localized="true" />

		<!-- Order -->

		<order by="desc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
	</entity>
</service-builder>